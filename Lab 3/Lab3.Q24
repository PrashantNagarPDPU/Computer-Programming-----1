#include <stdio.h>

void main() 
{
  int n, rev= 0, rem, num;

  printf("Enter an integer: ");
  scanf("%d", &n);

  num = n;  

  while (n != 0) 
  {
    rem = n % 10;
    rev= rev * 10 + rem;
    n /= 10;
  }

  if (num % 10 == 0) 
  {
    printf("Reversed number = %d", rev);
    
    while (num % 10 == 0)
     {
      printf("0");
      num/= 10;
    }
  } 
  else
   {
    printf("Reversed number = %d", rev);
  }
}